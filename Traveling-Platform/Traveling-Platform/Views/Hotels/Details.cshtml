@model Traveling_Platform.Models.Hotel

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewBag.Hotel.Name</h1>

<div>
    <p>Description: @ViewBag.Hotel.Description</p>
    <p>Contact: @ViewBag.Hotel.PhoneNumber</p>
    <p>City: @ViewBag.Hotel.CityName</p>
    <br/>
    <img src="@("data:image/png;base64," + ViewBag.PictureBase64)" alt="Hotel Picture" />

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id_hotel">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
